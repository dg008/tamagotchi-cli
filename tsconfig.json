{
    "compilerOptions": {
     "target": "es5",
     "lib": [
       "es2017","es2015","dom","es6"
      ],
     "module": "commonjs",
     "rootDir": "./src",
     "outDir": "./dist",
     "sourceMap": false,
     "strict": true,
     "esModuleInterop": true
    },
    "typedocOptions": {
      "mode": "modules",
      "out": "docs"
  },
    "include": [
        "**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "**/*.test.ts",
        "**/*.spec.ts"
    ]
}